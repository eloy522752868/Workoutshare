{{#if logged_in}}
<div class="container">
  {{#if routines.length}}
  <div class="column">
  <h2 class="p-2">Dashboard Users Exercises</h2>
    <div class="d-flex flex-row flex-wrap">
        <h5>{{weekdays}}</h5>  
   {{#with user}}
  <h5>{{user.name}}  </h5>  
  {{/with}}
    {{#each routines as |routine|}}
    
      <div class="col-3 p-2">
        <div class="card"> 
          <div class="card-header font-weight-bolder text-uppercase">{{routine.title}}</div>        
            <div class="card-body">
              <h5 class="card-title">{{user.name}}</h5>    
              <h6 class="card-text">Days: {{routine.weekdays}}</h6>
              <a href="/exercise/{{routine.exercise_id}}" class="btn btn-primary">View Exercise</a>                         
            </div>      
          </div>            
        </div>
        {{/each}}
      </div>
    </div>
  </div>

      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
      <script src="./js/results.js"></script>
     
      {{/if}}
      {{else}}
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12" style="text-align: center;">
            <img class="h-5000 d-inline-block" style="width: 160px" src="https://img.icons8.com/ios/452/dumbbell--v2.png">
      </div> 
        <div class="col-sm-12 col-md-12 col-lg-12" style="text-align: center;">
          <h2>Sign up for ExerSHARE</h2>
          <form class="form signup-form" class="col-sm-6 col-md-6 col-lg-6">
            <div class="form-group">
              <label for="name-signup">Name:</label>
              <input class="form-input" type="text" id="name-signup" />
            </div>
            <div class="form-group">
              <label for="email-signup">Email:</label>
              <input class="form-input" type="text" id="email-signup" />
            </div>
            <div class="form-group">
              <label for="password-signup">Password:</label>
              <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="form-group">
              <button class="btn btn-primary" type="submit">Sign Up!</button>
            </div>
          </form>
        </div>
        
      <script src="./js/signup.js"></script>
{{/if}}